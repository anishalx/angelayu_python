import random
print("whose gonna pay the bill ?")
name_string = input("Give me everybody's name ,seperated by a comma here \n").lower()
names = name_string.split(",")
# print(names)
# items= len(names)
# random_num = random.randint(0,items-1)
# pay_bills = names[random_num]
pay_bills = random.choice(names)

print(f"{pay_bills} is going to buy a meal today!")
